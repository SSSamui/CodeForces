#include <iostream>
#include <cstdio>
#include <vector>
#include <cmath>
using namespace std;

int main()
{
	ios::sync_with_stdio(false);
	cin.tie(nullptr);

	int _;
	cin >> _;
	while (_--)
	{
		int n;
		cin >> n;
		
		if (n == 2) cout << "-1\n";
		else if (n == 3) cout << "3 1\n3 2\n";
		else if (n == 4) cout << "1 2\n1 3\n1 4\n";
		else
		{
			cout << n << " 1\n3 4\n2 1\n2 3\n";
			for (int i = 5; i < n; i++) cout << i << " 2\n";
		}
	}
}
