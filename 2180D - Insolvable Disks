#include <iostream>
#include <cstdio>
#include <vector>
#include <cmath>
using namespace std;
using ll = long long;
 
const ll INF = 1e9 + 1;
 
int main()
{
	ios::sync_with_stdio(false);
	cin.tie(nullptr);
 
	int _;
	cin >> _;
	while (_--)
	{
		int n;
		cin >> n;
		vector<ll> a(n);
		for (int i = 0; i < n; i++) cin >> a[i];
 
		int ans = n - 1;
		ll l = 0, r = INF;
		for (int i = 1; i < n; i++)
		{
			swap(l, r);
			l = a[i] - a[i - 1] - l, r = a[i] - a[i - 1] - r;
			if (l < 0) l = 0;
			if (l >= r) ans--, l = 0, r = a[i] - a[i - 1];
		}
 
		cout << ans << "\n";
	}
}
