#include <iostream>
#include <cstdio>
#include <vector>
#include <cmath>
#include <string>
using namespace std;
 
int main()
{
	ios::sync_with_stdio(false);
	cin.tie(nullptr);
 
	int _;
	cin >> _;
	while (_--)
	{
		int n;
		cin >> n;
		string s;
		cin >> s;
 
		if (n % 2 == 1) cout << "-1\n";
		else
		{
			int a = 0, b = 0;
			for (int i = 0; i < n; i++) if (s[i] == '(')
			{
				if (i % 2 == 0) a++;
				else b++;
			}
 
			int leftp = n / 2;
			if ((a + b) % 2 != leftp % 2) cout << "-1\n";
			else
			{
				while (a + b < leftp) a++, b++;
				while (a + b > leftp) a--, b--;
				if (a == 0) cout << "-1\n";
				else
				{
					string ans = s;
					for (int i = 0; i < n; i++)
					{
						if (i % 2 == 0)
						{
							if (i / 2 < a) ans[i] = '(';
							else ans[i] = ')';
						}
 
						else if (i / 2 < b) ans[i] = '(';
						else ans[i] = ')';
					}
 
					cout << ans << "\n";
				}
			}
		}
	}
}
