#include <iostream>
#include <cstdio>
#include <vector>
#include <cmath>
#include <algorithm>
#include <set>
using namespace std;
 
const int MXN = 2e5 + 1;
 
vector<bool> prime(MXN, true);
vector<int> primes(0);
 
int solve()
{
	int n;
	cin >> n;
	vector<pair<int, int>> inds(n);
	for (int i = 0; i < n; i++) cin >> inds[i].second;
	for (int i = 0; i < n; i++) cin >> inds[i].first;
	sort(inds.begin(), inds.end());
 
	set<int> primefs;
	for (int i = 0; i < n; i++)
	{
		int curr = inds[i].second;
		for (int j = 0; primes[j] * primes[j] <= curr; j++) if (curr % primes[j] == 0)
		{
			if (primefs.count(primes[j]) == 1) return 0;
			primefs.insert(primes[j]);
			while (curr % primes[j] == 0) curr /= primes[j];
		}
 
		if (curr > 1)
		{
			if (primefs.count(curr) == 1) return 0;
			primefs.insert(curr);
		}
	}
 
	int ans = inds[0].first + inds[1].first;
	if (primefs.count(2) == 1)
	{
		if (inds[0].second % 2 == 1) return inds[0].first;
		ans = inds[1].first;
	}
 
	int ind = 0;
	for (int p : primefs)
	{
		int rem = inds[0].second % p;
		if (rem != 0)
		{
			int ops = p - rem;
			if (ops <= ans / inds[0].first) ans = ops * inds[0].first;
		}
	}
 
	while ((ind < n) && (inds[ind].first < ans))
	{
		int curr = inds[ind].second + 1;
		for (int j = 0; primes[j] * primes[j] <= curr; j++) if (curr % primes[j] == 0)
		{
			if (primefs.count(primes[j]) == 1) return inds[ind].first;
			while (curr % primes[j] == 0) curr /= primes[j];
		}
 
		if (curr > 1) if (primefs.count(curr) == 1) return inds[ind].first;
		ind++;
	}
 
	return ans;
}
 
int main()
{
	ios::sync_with_stdio(false);
	cin.tie(nullptr);
 
	prime[1] = false;
	for (int i = 2; i < MXN; i++) if (prime[i])
	{
		primes.push_back(i);
		if (i < 448) for (int j = i * i; j < MXN; j += i) prime[j] = false;
	}
 
	int _;
	cin >> _;
	while (_--) cout << solve() << "\n";
}
