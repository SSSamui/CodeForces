#include <iostream>
#include <cstdio>
#include <vector>
#include <cmath>
using namespace std;
using ll = long long;
 
const ll MOD = 1e6 + 3;
 
ll pw(ll b, ll e)
{
	if (e == 0) return 1ll;
	if (b == 1) return 1ll;
	if (e % 2 == 1) return (b * pw(b, e - 1)) % MOD;
	ll ans = pw(b, e / 2);
	return (ans * ans) % MOD;
}
 
int main()
{
	ios::sync_with_stdio(false);
	cin.tie(nullptr);
 
	vector<ll> fact(MOD, 1);
	for (int i = 1; i < MOD; i++) fact[i] = (fact[i - 1] * i) % MOD;
 
	int _;
	cin >> _;
	while (_--)
	{
		int n;
		cin >> n;
		vector<ll> a(n);
		vector<vector<ll>> b(n, vector<ll>(1));
		for (int i = 0; i < n; i++) cin >> a[i];
		for (int i = 0; i < n; i++) cin >> b[i][0];
 
		bool cont = true;
		for (int i = 0; i < n; i++) if (b[i][0] / 2 < a[i]) cont = false;
		while (cont)
		{
			for (int i = 0; i < n; i++)
			{
				b[i].push_back(b[i].back() / 2);
				if (b[i].back() / 2 < a[i]) cont = false;
			}
		}
 
		ll ans = b[0].size() - 1;
		ll combs = 1;
		while (!b[0].empty())
		{
			ll curr = 0;
			for (int i = 0; i < n; i++)
			{
				curr += 1ll * (b[i].back() - a[i]), combs = (combs * pw(fact[b[i].back() - a[i]], MOD - 2)) % MOD;
				a[i] = 2 * b[i].back();
				b[i].pop_back();
			}
 
			ans += curr;
			if (curr >= MOD) combs = 0;
			else combs = (combs * fact[curr]) % MOD;
		}
 
		cout << ans << ' ' << combs << "\n";
	}
}
