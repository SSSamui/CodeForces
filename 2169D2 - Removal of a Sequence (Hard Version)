#include <iostream>
#include <cstdio>
#include <vector>
#include <cmath>
using namespace std;
using ll = long long;
 
const ll MAX = 1e12;
 
ll ans(ll x, ll y, ll k)
{
	if (y == 1) return -1;
	if (k < y) return k;
 
	while (true)
	{
		ll r = ((k - 1) % (y - 1)) + 1;
		ll q = (k - r) / (y - 1);
		ll add = (y - r + q - 1) / q;
		add = min(add, x);
 
		k += add * q, x -= add;
		if (k > MAX) return -1;
		if (x == 0) return k;
	}
}
 
int main()
{
	ios::sync_with_stdio(false);
	cin.tie(nullptr);
 
	int _;
	cin >> _;
	while (_--)
	{
		ll x, y, k;
		cin >> x >> y >> k;
		cout << ans(x, y, k) << "\n";
	}
}
