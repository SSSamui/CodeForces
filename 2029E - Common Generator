#include <iostream>
#include <cstdio>
#include <vector>
#include <cmath>
using namespace std;
 
const int MXA = 4e5 + 1;
 
vector<int> mindiv(MXA, 0);
 
int solve()
{
	int n;
	cin >> n;
	vector<int> a(n);
	for (int i = 0; i < n; i++) cin >> a[i];
 
	int ans = 2;
	for (int i = 0; i < n; i++) if (mindiv[a[i]] == a[i]) if (a[i] != ans)
	{
		if (ans == 2) ans = a[i];
		else return -1;
	}
 
	if (ans == 2) return 2;
	for (int i = 0; i < n; i++)
	{
		if (a[i] < ans) return -1;
		else if (a[i] > ans)
		{
			if (a[i] < 2 * ans) return -1;
			else if (a[i] % 2 == 1) if (a[i] - mindiv[a[i]] < 2 * ans) return -1;
		}
	}
 
	return ans;
}
 
int main()
{
	for (int i = 1; i < MXA; i++) mindiv[i] = i;
	for (int i = 2; i * i < MXA; i++) if (mindiv[i] == i)
		for (int j = i * i; j < MXA; j += i) if (mindiv[j] == j) mindiv[j] = i;
 
	int _;
	cin >> _;
	while (_--) cout << solve() << "\n";
}
